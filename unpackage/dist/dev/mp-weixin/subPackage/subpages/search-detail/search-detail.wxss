.detail-container {
  padding: 8px 10px;
  padding-bottom: 108px;
}
.detail-container .title {
  font-size: 20px;
  color: #000;
  font-weight: bold;
}
.detail-container .detail-info {
  padding: 8px 0;
  display: flex;
  justify-content: space-between;
}
.detail-container .detail-info .detail-left {
  display: flex;
}
.detail-container .detail-info .detail-left .author-box {
  margin-left: 10px;
  display: flex;
  flex-direction: column;
}
.detail-container .detail-info .detail-left .author-box .author {
  font-size: 14px;
  font-weight: bolder;
  color: #2c405a;
}
.detail-container .detail-info .detail-left .author-box .release-time {
  font-size: 12px;
  color: #999;
}
.detail-container .detail-info .detail-right {
  display: flex;
  align-items: center;
}
.detail-container .detail-info .detail-right .follow {
  padding: 0 10px;
  width: 65px;
}

