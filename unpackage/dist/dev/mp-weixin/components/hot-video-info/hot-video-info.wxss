.hot-video-info-container .video-title {
  position: absolute;
  top: 24px;
  left: 15px;
  color: #fff;
  font-size: 16px;
}
.hot-video-info-container .video-info {
  display: flex;
  justify-content: space-between;
  background-color: #ffffff;
  padding: 4px 15px;
}
.hot-video-info-container .video-info .author-box {
  display: flex;
  align-items: center;
}
.hot-video-info-container .video-info .author-box .author-txt {
  margin-left: 5px;
  font-size: 14px;
  color: #333;
  font-weight: bold;
}
.hot-video-info-container .video-info .barrage-box {
  display: flex;
  align-items: center;
}
.hot-video-info-container .video-info .barrage-box .barrage-num {
  margin-left: 5px;
  font-size: 12px;
  color: #333;
}

